{% from "jade-mixins.jade" import project_header with context %}
// this is for the sidebar
- set projects = site.content.node_from_relative_path('projects/_hidden').walk_resources_sorted_by_updated()
each project in projects[:10]
  - set meta = project.meta.project
  .project(class="#{'forked' if meta.forked else ''}")
    mixin project_header(meta)
    p= meta.description

