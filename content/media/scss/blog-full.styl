@import "macros";

#content {
    #main-content {

        .post {
            margin-left: 0;

            header {
                margin-top: 6px;
            }

            section.body {
                font-family: Georgia, serif;
                font-size: 14px;
                line-height: 26px;
            }

            h3.title {
                font-size: 2.1em;
            }
        }
        @media (min-width: 1400px) {
            .post {
                spanner();
                span6();
            }
        }
    }
}
